<%- include("partials/header"); -%>

<%  posts.forEach(function(post){ %>

<div class="card">
  <div class="card-header">
    <h1 class="post-heading"><%=post.title%></h1>
  </div>
  <div class="card-body">
    <p>
      <%=post.content.substring(0, 120) + " ..."%>
      <a href="/posts/<%=post._id%>" class="btn btn-success" role="button">Read More</a>
      <a href="/update/<%=post._id%>" class="btn btn-success" role="button">Update</a>
      <a href="/delete/<%=post._id%>" class="btn btn-success" role="button">Delete</a>
  </div>
</div>

<% }) %>

<%- include("partials/footer"); -%>
